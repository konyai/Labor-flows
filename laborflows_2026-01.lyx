\begin_layout Title
Job market transitions:
 identification from cross-sectional data
\end_layout

\begin_layout Author
István Kónya
\begin_inset Foot
status open

\begin_layout Plain Layout
Corvinus University and CERS.
 E-mail:
 istvan.konya@uni-corvinus.hu.
\end_layout

\end_inset


